<?xml version="1.0" encoding="utf-8"?>
<!-- 绑定手机界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 模拟Tab标签 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <!-- tab1 -->

        <LinearLayout
            android:id="@+id/bindtabview11"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bindtab1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="1.输入号码"
                android:textColor="@color/dodgerblue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bindline1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/dodgerblue" />
        </LinearLayout>

        <!-- tab1 -->

        <LinearLayout
            android:id="@+id/bindtabview12"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="1.修改号码"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/gray" />
        </LinearLayout>

        <!-- tab2 -->

        <LinearLayout
            android:id="@+id/bindtabview21"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bindtab2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="2.发送验证码"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bindline2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/gray" />
        </LinearLayout>

        <!-- tab2 -->

        <LinearLayout
            android:id="@+id/bindtabview22"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="2.发送验证码"
                android:textColor="@color/dodgerblue"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/dodgerblue" />
        </LinearLayout>

        <!-- tab3 -->

        <LinearLayout
            android:id="@+id/bindtabview31"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bindtab3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="3.完成修改"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bindline3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/gray" />
        </LinearLayout>

        <!-- tab3 -->

        <LinearLayout
            android:id="@+id/bindtabview32"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="3.完成修改"
                android:textColor="@color/dodgerblue"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/dodgerblue" />
        </LinearLayout>
    </LinearLayout>
    <!-- 界面一 -->

    <LinearLayout
        android:id="@+id/bindview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="绑定号码:"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/phonenum_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:inputType="number" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:background="@color/dodgerblue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="right"
            android:orientation="vertical" >

            <Button
                android:id="@+id/getrandom_bt"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:background="@drawable/regsaveinfo_bt_layout"
                android:drawableRight="@drawable/righticon"
                android:text="获取验证码"
                android:textColor="@color/dodgerblue"
                android:textSize="16sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="0.3dp"
                android:layout_marginRight="20dp"
                android:background="@color/dodgerblue" />
        </LinearLayout>
    </LinearLayout>

    <!-- 界面一 -->

    <LinearLayout
        android:id="@+id/bindview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="输入验证码:"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/random_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:inputType="number" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:background="@color/dodgerblue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="right"
            android:orientation="vertical" >

            <Button
                android:id="@+id/successreg_bt"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:background="@drawable/regsaveinfo_bt_layout"
                android:drawableRight="@drawable/righticon"
                android:text="发送验证码"
                android:textColor="@color/dodgerblue"
                android:textSize="16sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="0.3dp"
                android:layout_marginRight="20dp"
                android:background="@color/dodgerblue" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bindview3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="绑定手机成功！"
                android:textColor="@color/dodgerblue"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:background="@color/dodgerblue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="right"
            android:orientation="vertical" >

            <Button
                android:id="@+id/regend_bt"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:background="@drawable/regsaveinfo_bt_layout"
                android:drawableRight="@drawable/righticon"
                android:text="完成注册"
                android:textColor="@color/dodgerblue"
                android:textSize="16sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="0.3dp"
                android:layout_marginRight="20dp"
                android:background="@color/dodgerblue" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>