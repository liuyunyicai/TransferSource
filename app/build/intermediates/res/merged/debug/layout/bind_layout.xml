<?xml version="1.0" encoding="utf-8"?>
<!-- 修改绑定 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 模拟Tab标签 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- tab1 -->

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bindtab1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="1.修改号码"
                android:textColor="@color/gold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bindline1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/beige" />
        </LinearLayout>

        <!-- tab2 -->

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bindtab2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="2.发送验证码"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bindline2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/gray" />
        </LinearLayout>

        <!-- tab3 -->

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bindtab3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="3.完成修改"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bindline3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <!-- 界面一 -->

    <LinearLayout
        android:id="@+id/bindview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="原绑定号码:"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/orinal_bind"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:inputType="number" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:background="@color/beige" />

        <!-- 输入绑定号码 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="现绑定号码:"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/now_bind"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:inputType="number" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:background="@color/beige" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="right" >

            <Button
                android:id="@+id/bindnext_bt"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:background="@drawable/bindbt_layout"
                android:text="下一步"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 界面2 -->

    <LinearLayout
        android:id="@+id/bindview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <!-- 输入验证码 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="输入验证码:"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/bind_random"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:inputType="number" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:background="@color/beige" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="right" >

            <Button
                android:id="@+id/bindrandom_bt"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:background="@drawable/bindbt_layout"
                android:text="下一步"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 界面3 -->

    <LinearLayout
        android:id="@+id/bindview3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="修改手机绑定成功！"
                android:textColor="@color/gold"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:background="@color/beige" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="right" >

            <Button
                android:id="@+id/bindsuccess_bt"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:background="@drawable/bindbt_layout"
                android:text="完成"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/F:/AS_data/TransferSource/app/src/main/res/layout/bind_layout.xml -->