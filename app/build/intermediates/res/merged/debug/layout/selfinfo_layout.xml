<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <!-- 保存修改 -->

        <Button
            android:id="@+id/selfinfo_ok"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:background="@drawable/selfinfo_okbt"
            android:drawableLeft="@drawable/savechange_icon"
            android:gravity="left|center_vertical"
            android:text="   保存修改"
            android:textColor="@color/lightpink"
            android:textSize="21sp" />

        <Button
            android:id="@+id/selfinfo_cancel"
            android:layout_width="50dp"
            android:layout_height="28dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/selfinfo_okbt"
            android:text="取消"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightpink" />
    <!-- 昵称 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="个人昵称:  "
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/self_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:textColor="@color/grey"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="45dp"
        android:background="@color/lightpink" />

    <!-- 等级 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="账号等级:  "
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/self_level"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:textColor="@color/grey"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="45dp"
        android:background="@color/lightpink" />

    <!-- 绑定号码 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="绑定手机:  "
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/self_bind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:textColor="@color/grey"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="45dp"
        android:background="@color/lightpink" />

    <!-- 真实姓名 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="真实姓名:  "
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <Button
            android:id="@+id/self_realname_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selfinfo_okbt"
            android:drawableRight="@drawable/righticon"
            android:gravity="left|center_vertical"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/self_realname_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="45dp"
        android:background="@color/lightpink" />

    <!-- 联系邮箱 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="联系邮箱:  "
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <Button
            android:id="@+id/self_email_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selfinfo_okbt"
            android:drawableRight="@drawable/righticon"
            android:gravity="left|center_vertical"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/self_email_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="45dp"
        android:background="@color/lightpink" />

    <!-- 地址 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="通讯地址:  "
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <Button
            android:id="@+id/self_place_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selfinfo_okbt"
            android:drawableRight="@drawable/righticon"
            android:gravity="left|center_vertical"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/self_place_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="45dp"
        android:background="@color/lightpink" />

</LinearLayout><!-- From: file:/F:/AS_data/TransferSource/app/src/main/res/layout/selfinfo_layout.xml -->