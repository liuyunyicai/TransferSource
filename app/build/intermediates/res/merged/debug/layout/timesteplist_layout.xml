<?xml version="1.0" encoding="utf-8"?>
<!-- 时间点List -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="7dp" >

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:background="@color/gold" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="118dp"
            android:background="@color/red" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="116dp"
            android:background="@color/gold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@color/gold"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical" >

            <!-- 时间点 -->

            <TextView
                android:id="@+id/timestep_time"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/orange"
                android:textSize="14sp" />
            <!-- 中间圆形按钮 -->

            <ImageButton
                android:id="@+id/timestep_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/stateicon" />
            <!-- 地点 -->

            <TextView
                android:id="@+id/timestep_place"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/F:/AS_data/TransferSource/app/src/main/res/layout/timesteplist_layout.xml -->